# Local Development Configuration
# Copy this to .env for local development

# Database - SQLite (default, zero config)
DB_TYPE=sqlite
SQLITE_PATH=./riftfound.db

# Or use PostgreSQL (requires docker-compose up):
# DB_TYPE=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=riftfound
# DB_USER=riftfound
# DB_PASSWORD=localdevpassword

# Application Settings
NODE_ENV=development
PORT=3001

# Scraper Settings
SCRAPE_INTERVAL_MINUTES=60
SCRAPE_MAX_PAGES=20
RIFTBOUND_EVENTS_URL=https://locator.riftbound.uvsgames.com/events

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
